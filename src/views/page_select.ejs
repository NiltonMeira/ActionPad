  <link rel="stylesheet" href="css/page_select_css/page_select_header.css">
  <link rel="stylesheet" href="css/page_select_css/page_select_main.css">
  <link rel="stylesheet" href="css/page_select_css/page_select_footer.css">

  <link rel="stylesheet" href="css/details_css/option_bar.css">
  <link rel="stylesheet" href="css/details_css/page_card.css">

  <link rel="stylesheet" href="css/details_css/day_night.css">

